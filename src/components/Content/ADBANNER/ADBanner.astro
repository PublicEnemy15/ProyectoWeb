  </video>

  <div class="supporter-ad__bg-image supporter-ad__bg-image--small" style="background-image: url('src/assets/senaT.jpg');"></div>
  <div class="supporter-ad__bg-image supporter-ad__bg-image--medium" style="background-image: url('src/assets/senaT.jpg');"></div>

  <div class="supporter-ad__overlay"></div>

  <div class="supporter-ad__info">
    <h2 class="supporter-ad__heading">Creado por amantes del manga, para amantes del manga.</h2>
    <a href="/otrapag" class="nts-app nts-button supporter-ad__cta">Convi√©rtete en un miembro de KITH</a>
  </div>

</section>

<script is:inline>
  if (typeof window !== "undefined") {
    const section = document.querySelector('.supporter-ad');
    const video = document.getElementById('bg-video');

    if (video && section) {
      video.pause();

      section.addEventListener('mouseenter', () => {
        video.play();
      });

      section.addEventListener('mouseleave', () => {
        video.pause();
      });
    }
  }
</script>


