<script>
    const chatIcon = document.querySelector('.ChadBot');
    const chatDropUp = document.getElementById('chatDropUp');
    const chatClose = document.getElementById('chatClose');


    // Clic en el icono: alternar el menÃº
    if(chatIcon) chatIcon.addEventListener('click', function(event) {
        event.stopPropagation(); // Evita que el clic tambiÃ©n cuente como clic en el documento
        if(chatDropUp){
            if (chatDropUp.style.display === 'grid') {
                chatDropUp.style.display = 'none';
                chatIcon.classList.remove('active'); // ðŸ‘ˆ Quita el borde
            } else {
                chatDropUp.style.display = 'grid';
                chatIcon.classList.add('active'); // ðŸ‘ˆ Agrega el borde
            }
        }
    });
    
    if(chatClose) chatClose.addEventListener('click', function(){
        if(chatDropUp){
            if (chatDropUp.style.display === 'grid') {
                chatDropUp.style.display = 'none';
                if(chatIcon) chatIcon.classList.remove('active'); // ðŸ‘ˆ Quita el borde tambiÃ©n
